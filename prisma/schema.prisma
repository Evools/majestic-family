generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                   String                  @id @default(cuid())
  name                 String?
  email                String?                 @unique
  emailVerified        DateTime?
  image                String?
  role                 Role                    @default(MEMBER)
  firstName            String?
  status               UserStatus              @default(PENDING)
  lastActiveAt         DateTime?
  lastName             String?
  staticId             String?                 @unique
  createdAt            DateTime                @default(now())
  rank                 Int                     @default(1)
  roleName             String                  @default("Novice")
  updatedAt            DateTime                @default(now()) @updatedAt
  accounts             Account[]
  payoutRequests       PayoutRequest[]
  reports              Report[]
  verifiedReports      Report[]                @relation("Verifier")
  reportParticipations ReportParticipant[]
  sessions             Session[]
  userContracts        UserContract[]
  password             String?
  application          RecruitmentApplication?
}

model Report {
  id               String              @id @default(cuid())
  userId           String
  contractType     String
  itemName         String
  quantity         Int
  proof            String
  comment          String?
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
  familyShare      Float?              @default(0)
  rejectionReason  String?
  userShare        Float?              @default(0)
  value            Float?              @default(0)
  verifierId       String?
  discordMessageId String?
  status           ReportStatus        @default(PENDING)
  userContractId   String?
  userContract     UserContract?       @relation(fields: [userContractId], references: [id])
  user             User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  verifier         User?               @relation("Verifier", fields: [verifierId], references: [id])
  participants     ReportParticipant[]
}

model ReportParticipant {
  id        String   @id @default(cuid())
  reportId  String
  userId    String
  share     Float    @default(0)
  createdAt DateTime @default(now())
  report    Report   @relation(fields: [reportId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([reportId, userId])
}

model PayoutRequest {
  id        String       @id @default(cuid())
  userId    String
  amount    Float
  status    PayoutStatus @default(PENDING)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Contract {
  id            String         @id @default(cuid())
  title         String
  description   String?
  icon          String         @default("ClipboardList")
  level         Int            @default(1)
  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  reputation    Int            @default(0)
  reward        Int            @default(0)
  cooldownUntil DateTime?
  maxSlots      Int            @default(10)
  currentCycle  Int            @default(1)
  isFlexible    Boolean        @default(false)
  category      String         @default("General")
  userContracts UserContract[]
}

model UserContract {
  id          String         @id @default(cuid())
  userId      String
  contractId  String
  status      ContractStatus @default(ACTIVE)
  startedAt   DateTime       @default(now())
  completedAt DateTime?
  cycleNumber Int            @default(1)
  reports     Report[]
  contract    Contract       @relation(fields: [contractId], references: [id], onDelete: Cascade)
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@index([contractId])
}

model DashboardSettings {
  id               String   @id @default(cuid())
  bonusActive      Boolean  @default(false)
  bonusTitle       String?
  bonusDescription String?
  familyBalance    Float    @default(0)
  goalName         String?
  goalTarget       Float?
  goalCurrent      Float?
  familyLevel      Int      @default(1)
  familyXP         Int      @default(0)
  familyXPRequired Int      @default(1000)
  updatedAt        DateTime @updatedAt
  createdAt        DateTime @default(now())
}

model SystemSettings {
  id                    String   @id @default(cuid())
  familyName            String   @default("Shelby Family")
  familyDescription     String?
  familyLogoUrl         String?
  userSharePercent      Int      @default(60)
  familySharePercent    Int      @default(40)
  minWithdrawal         Int      @default(10000)
  contractCooldownHours Int      @default(24)
  autoApproveReports    Boolean  @default(false)
  xpMultiplier          Float    @default(1.5)
  baseXPRequired        Int      @default(1000)
  discordWebhook        String?
  notifyNewReports      Boolean  @default(false)
  notifyAdminActions    Boolean  @default(false)
  updatedAt             DateTime @updatedAt
  createdAt             DateTime @default(now())
  maxActiveContracts    Int      @default(10)
}

enum Role {
  MEMBER
  MODERATOR
  ADMIN
}

enum ReportStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ContractStatus {
  ACTIVE
  COMPLETED
  CANCELLED
}

enum PayoutStatus {
  PENDING
  PAID
  REJECTED
}

model RecruitmentApplication {
  id          String            @id @default(cuid())
  discordId   String
  discordName String
  age         Int
  staticId    String // Static ID on the server
  experience  String // RP experience
  reason      String // Why they want to join
  status      ApplicationStatus @default(PENDING)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  userId      String?           @unique
  user        User?             @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum UserStatus {
  PENDING
  ACTIVE
  REJECTED
  BANNED
}
