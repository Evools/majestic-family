// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Role {
  MEMBER
  MODERATOR
  ADMIN
}

enum ReportStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id              String    @id @default(cuid())
  name            String?
  email           String?   @unique
  emailVerified   DateTime?
  image           String?
  firstName       String?
  lastName        String?
  staticId        String?   @unique
  lastActiveAt    DateTime?
  role            Role      @default(MEMBER)
  accounts        Account[]
  sessions        Session[]
  reports         Report[]
  verifiedReports Report[]  @relation("Verifier")
}

model Report {
  id           String       @id @default(cuid())
  userId       String
  contractType String
  // Optional link to a dynamic Contract if needed, but keeping string for flexibility for now
  itemName     String
  quantity     Int
  proof        String
  comment      String?
  status       ReportStatus @default(PENDING)

  // Financials (Filled on Approval)
  value       Float? @default(0) // Total value
  userShare   Float? @default(0) // 60%
  familyShare Float? @default(0) // 40%

  // Verification
  verifierId      String?
  rejectionReason String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  verifier User? @relation("Verifier", fields: [verifierId], references: [id])
}

model Contract {
  id          String   @id @default(cuid())
  title       String
  description String?
  reward      Int      @default(0) // Money reward in dollars
  reputation  Int      @default(0) // XP/reputation points
  icon        String   @default("ClipboardList") // Lucide icon name
  level       Int      @default(1)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model DashboardSettings {
  id               String  @id @default(cuid())
  // Active Bonus
  bonusActive      Boolean @default(false)
  bonusTitle       String?
  bonusDescription String?

  // Family Balance
  familyBalance Float @default(0)

  // Financial Goal
  goalName    String?
  goalTarget  Float?
  goalCurrent Float?

  // Family Level
  familyLevel      Int @default(1)
  familyXP         Int @default(0)
  familyXPRequired Int @default(1000)

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model SystemSettings {
  id String @id @default(cuid())

  // Family Info
  familyName        String  @default("Shelby Family")
  familyDescription String?
  familyLogoUrl     String?

  // Financial
  userSharePercent   Int @default(60)
  familySharePercent Int @default(40)
  minWithdrawal      Int @default(10000)

  // Contracts
  contractCooldownHours Int     @default(24)
  autoApproveReports    Boolean @default(false)

  // Levels
  xpMultiplier   Float @default(1.5)
  baseXPRequired Int   @default(1000)

  // Notifications
  discordWebhook   String?
  notifyNewReports Boolean @default(true)

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
